<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_android"
    >


<ScrollView
    android:id="@+id/myScrollView"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight=".7"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dip" >

            <HorizontalScrollView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/opcao1"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:padding="15dp"
                        android:src="@drawable/common_signin_btn_icon_dark" />


                </LinearLayout>
            </HorizontalScrollView>

            <!-- Name Label -->

            <RatingBar
                android:id="@+id/ratingBar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <TextView
                android:textColor="@android:color/primary_text_dark"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="10dip"
                android:text="@string/name"
                android:textStyle="bold" />

            <!-- Name Value -->

            <TextView
                android:textColor="@android:color/primary_text_dark"
                android:id="@+id/name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <!-- Description Value -->
            <TextView
                android:textColor="@android:color/primary_text_dark"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="10dip"
                android:text="@string/description"
                android:textStyle="bold" />

            <!-- Description Value -->

            <TextView
                android:textColor="@android:color/primary_text_dark"
                android:id="@+id/description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />



            <!-- Address Label -->

            <TextView
                android:textColor="@android:color/primary_text_dark"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="15dip"
                android:text="@string/adress"
                android:textStyle="bold" />

            <!-- Address Value -->

            <TextView
                android:textColor="@android:color/primary_text_dark"
                android:id="@+id/address"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <!-- Schedule Value -->
            <TextView
                android:textColor="@android:color/primary_text_dark"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="10dip"
                android:text="@string/scheudle"
                android:textStyle="bold" />

            <!-- Schedule Value -->

            <TextView
                android:textColor="@android:color/primary_text_dark"
                android:id="@+id/schedule"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <!-- Transport Value -->
            <TextView
                android:textColor="@android:color/primary_text_dark"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="10dip"
                android:text="@string/transport"
                android:textStyle="bold" />

            <!-- Site Value -->

            <TextView
                android:textColor="@android:color/primary_text_dark"
                android:id="@+id/transport"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />



            <!-- Site Value -->
            <TextView
                android:textColor="@android:color/primary_text_dark"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="10dip"
                android:text="@string/site"
                android:textStyle="bold" />

            <!-- Site Value -->

            <TextView
                android:textColor="@android:color/primary_text_dark"
                android:id="@+id/website"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />



            <!-- Email Value -->
            <TextView
                android:textColor="@android:color/primary_text_dark"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="10dip"
                android:text="@string/email"
                android:textStyle="bold" />

            <!-- Email Value -->

            <TextView
                android:textColor="@android:color/primary_text_dark"
                android:id="@+id/email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:id="@+id/labels_event"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <!-- start value -->
                    <TextView
                        android:textColor="@android:color/primary_text_dark"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dip"
                        android:layout_marginTop="10dip"
                        android:text="Inicio:"
                        android:textStyle="bold" />

                    <!-- start value -->

                    <TextView
                        android:textColor="@android:color/primary_text_dark"
                        android:id="@+id/event_start"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />

                    <!-- end value -->
                    <TextView
                        android:textColor="@android:color/primary_text_dark"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dip"
                        android:layout_marginTop="10dip"
                        android:text="Fim:"
                        android:textStyle="bold" />

                    <!-- end value -->

                    <TextView
                        android:textColor="@android:color/primary_text_dark"
                        android:id="@+id/event_end"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />


                    <!-- org value -->
                    <TextView
                        android:textColor="@android:color/primary_text_dark"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dip"
                        android:layout_marginTop="10dip"
                        android:text="Organização:"
                        android:textStyle="bold" />

                    <!-- org value -->

                    <TextView
                        android:textColor="@android:color/primary_text_dark"
                        android:id="@+id/org"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />

                    <!-- Price Value -->
                    <TextView
                        android:textColor="@android:color/primary_text_dark"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dip"
                        android:layout_marginTop="10dip"
                        android:text="@string/price"
                        android:textStyle="bold" />
                    <!-- Price Value -->

                    <TextView
                        android:textColor="@android:color/primary_text_dark"
                        android:id="@+id/price"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />

                    <!-- program value -->
                    <TextView
                        android:textColor="@android:color/primary_text_dark"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dip"
                        android:layout_marginTop="10dip"
                        android:text="Programação:"
                        android:textStyle="bold" />

                    <!-- program value -->

                    <TextView
                        android:textColor="@android:color/primary_text_dark"
                        android:id="@+id/event_program"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/labels_service"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <!-- details value -->
                    <TextView
                        android:textColor="@android:color/primary_text_dark"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dip"
                        android:layout_marginTop="10dip"
                        android:text="Detalhes:"
                        android:textStyle="bold" />

                    <!-- capacity value -->

                    <TextView
                        android:textColor="@android:color/primary_text_dark"
                        android:id="@+id/serv_details"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />

                    <!-- capacity value -->
                    <TextView
                        android:textColor="@android:color/primary_text_dark"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dip"
                        android:layout_marginTop="10dip"
                        android:text="Capacidade:"
                        android:textStyle="bold" />

                    <!-- capacity value -->

                    <TextView
                        android:textColor="@android:color/primary_text_dark"
                        android:id="@+id/serv_capacity"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
</ScrollView>
    <View
        style="@style/MenuLine"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/abc_ab_bottom_solid_dark_holo"
        android:paddingRight="10dp"
        />
    <EditText

        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="80dp" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    </LinearLayout>
<ListView
android:id="@+id/comments"
android:layout_width="match_parent"
android:layout_height="0dp"
android:layout_weight=".3"/>


    </LinearLayout>